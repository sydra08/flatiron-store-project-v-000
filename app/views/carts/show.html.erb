<h1>Your Cart</h1>

<% if notice %>
  <p><em><%= notice %></em></p>
<% end %>

<% @cart.line_items.each do |line_item| %>
  <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= "$#{line_item.item.price/100.00}" %> | Quantity: <%= line_item.quantity %> <% if line_item.item.inventory < 5 %> | 
    <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>

<p>Order total: <strong><%= "$#{@cart.total.to_f/100.00}" %></strong> </p>

<% if @cart.status == "not submitted" %>
  <%= button_to 'Checkout', checkout_path %>
<% end %>
